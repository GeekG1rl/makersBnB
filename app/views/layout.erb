  <body>

    <% if current_user %>
    Logged in as: <%= current_user.first_name + " " + current_user.last_name %>
    <form action="/sessions" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" name="Log Out">Log Out</button>
    </form>

    <% else %>

    <form action="/sessions" method="post">
      Email: <input type="email" name="login_email">
      Password: <input type="password" name="login_password">
      <button type="submit"> Log In </button>
    </form>

    <% end %>

    <% if flash[:errors]%>
    <%= flash[:errors]%>
    <% end %>
    
    <div id="log_out">
      <% if flash[:notice]%>
      <%= flash[:notice]%>
      <% end %>
    </div>

