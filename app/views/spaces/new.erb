<div class="container">


  <form action="/spaces" method="post" id="space_input">
    <p>Property name<br><input type="text" name="name"></p>
    <p>Description<br>
      <textarea class="form-control" rows="4" cols="40" form="space_input" name="description"></textarea>
    </p>
    <p>Cost per night<br><input type="number" name="price"></p>
    <p><input class="start_date" type="date" name="start_date"></p>
    <p><input class="end_date" type="date" name="end_date"></p>

    <button class="btn btn-danger" type="submit" name="create space">create space</button>
  </form>
</div>
